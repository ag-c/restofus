<Window
  xmlns="https://github.com/avaloniaui"
  xmlns:pads="clr-namespace:Restofus.Pads;assembly=Restofus"
  Width="1024"
  Height="480"
  MinWidth="640"
  MinHeight="480"
  Background="#293955">

  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="22" />
    </Grid.RowDefinitions>

    <pads:NavigationPad
      Grid.Row="0" 
      Grid.Column="0"
      DataContext="{Binding NavigationPadContext}" />

    <GridSplitter
      Grid.Row="0"
      Grid.Column="1"
      Background="#293955" />

    <pads:RequestPad
      Grid.Row="0"
      Grid.Column="2"
      DataContext="{Binding RequestPadContext}" />

    <GridSplitter
      Grid.Row="0"
      Grid.Column="3"
      Background="#293955" />

    <pads:ResponsePad
      Grid.Row="0"
      Grid.Column="4"
      DataContext="{Binding ResponsePadContext}" />

    <pads:StatusBar
      Grid.Row="1"
      Grid.ColumnSpan="5" 
      />
    
  </Grid> 
  
</Window>