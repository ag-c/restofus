<Window
  xmlns="https://github.com/avaloniaui"
  xmlns:pads="clr-namespace:Restofus.Pads;assembly=Restofus"
  MinWidth="800"
  MinHeight="360"
  Background="#293955">

  <Grid
    Margin="5">

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200" />
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <pads:NavigationPad Grid.Column="0" />

    <GridSplitter Grid.Column="1" Background="#293955" /> 
    
    <pads:RequestPad Grid.Column="2" />

    <GridSplitter Grid.Column="3" Background="#293955" />
    
    <pads:ResponsePad Grid.Column="4" />
    
  </Grid> 
  
</Window>