<Window
  xmlns="https://github.com/avaloniaui"
  xmlns:pads="clr-namespace:Restofus.Pads;assembly=Restofus"
  Width="1024"
  Height="480"
  MinWidth="640"
  MinHeight="480"
  Background="#293955">

  <Grid
    Margin="5">

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>

    <pads:NavigationPad Grid.Column="0" DataContext="{Binding NavigationPadContext}" />

    <GridSplitter Grid.Column="1" Background="#293955" /> 
    
    <pads:RequestPad Grid.Column="2" DataContext="{Binding RequestPadContext}" />

    <GridSplitter Grid.Column="3" Background="#293955" />
    
    <pads:ResponsePad Grid.Column="4" DataContext="{Binding ResponsePadContext}" />
    
  </Grid> 
  
</Window>