<UserControl
  xmlns="https://github.com/avaloniaui"
  Background="#ffffff">

  <ListBox
      Items="{Binding Items}"
      SelectionMode="AlwaysSelected"
      BorderThickness="0">

    <ListBox.ItemTemplate>
      <DataTemplate>

        <Grid ColumnDefinitions="1*,1*,auto">

          <Panel Grid.Column="0">
            <TextBox IsVisible="{Binding !IsButton}" Text="{Binding Key}" />
            <Button IsVisible="{Binding IsButton}">
              <TextBlock Text="{Binding I18N[Add]}" />
            </Button>
          </Panel>

          <TextBox
            Grid.Column="1"
            IsVisible="{Binding !IsButton}"
            Text="{Binding Value}" />

          <Button Grid.Column="2" IsVisible="{Binding !IsButton}">
            <TextBlock>X</TextBlock>
          </Button>
          
        </Grid>

      </DataTemplate>
    </ListBox.ItemTemplate>

  </ListBox>
    
</UserControl>