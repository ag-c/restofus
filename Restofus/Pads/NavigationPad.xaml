<UserControl
  xmlns="https://github.com/avaloniaui"
  Padding="1"
  Background="#8e9bbc"
  Margin="5,5,0,5">

  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition Height="28" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Rectangle Grid.Row="0" Fill="#cfd6e5"/>

    <TextBox
      Grid.Row="1"
      AcceptsReturn="True"
      BorderThickness="0">
      
    </TextBox>

  </Grid>
    
</UserControl>