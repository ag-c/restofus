<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:pads="clr-namespace:Restofus.Pads;assembly=Restofus"
  Padding="1"
  Background="#8e9bbc"
  Margin="0,5,0,5">
  
  <Grid>
        
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <pads:WorkspaceTabs Grid.Row="0" />

    <pads:RequestEditor Grid.Row="1" DataContext="{Binding RequestEditorContext}" /> 

  </Grid>
  
</UserControl>