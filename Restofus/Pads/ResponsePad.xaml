<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:pads="clr-namespace:Restofus.Pads;assembly=Restofus"
  xmlns:editor="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
  Padding="1"
  Background="#8e9bbc"
  Margin="0,5,5,5">
  
  <Grid RowDefinitions="28,*">

    <Rectangle Grid.Row="0" Fill="#cfd6e5"/> 
    
    <TabControl Grid.Row="1">

      <TabItem>
        <TabItem.Header>
          <TextBlock Text="{Binding I18N[Body]}"/>
        </TabItem.Header>

        <editor:TextEditor
          Name="responseBodyEditor"
          IsReadOnly="True"
          WordWrap="True"
          TextBlock.FontSize="14"
          Background="#ffffff"/>

      </TabItem>

      <TabItem>
        <TabItem.Header>
          <TextBlock Text="{Binding I18N[Headers]}"/>
        </TabItem.Header>

        <pads:HeadersViewer DataContext="{Binding HeadersViewerContext}" />
      </TabItem>

    </TabControl>
        
  </Grid>
  
</UserControl>