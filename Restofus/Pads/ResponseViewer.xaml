<UserControl xmlns="https://github.com/avaloniaui">

  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <TabControl Grid.Row="0"  Background="Red">

      <TabItem>
        <TabItem.Header>
          <TextBlock Text="{Binding I18N[Body]}"/>
        </TabItem.Header>

        <TextBox BorderThickness="0" Text="{Binding ResponseBodyText}" />
      </TabItem>

      <TabItem>
        <TabItem.Header>
          <TextBlock Text="{Binding I18N[Headers]}"/>
        </TabItem.Header>

        <TextBox BorderThickness="0" Text="{Binding ResponseHeadersText}" />
      </TabItem>

    </TabControl>

  </Grid>

</UserControl>