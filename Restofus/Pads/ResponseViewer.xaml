<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:editor="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit">

  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <TabControl Grid.Row="0">

      <TabItem>
        <TabItem.Header>
          <TextBlock Text="{Binding I18N[Body]}"/>
        </TabItem.Header>

        <editor:TextEditor
          Name="responseBodyEditor"
          IsReadOnly="True"
          WordWrap="True"
          TextBlock.FontSize="14"
          Background="#ffffff"/>
        
      </TabItem>

      <TabItem>
        <TabItem.Header>
          <TextBlock Text="{Binding I18N[Headers]}"/>
        </TabItem.Header>

        <TextBox BorderThickness="0" Text="{Binding ResponseHeadersText}" />
      </TabItem>

    </TabControl>

  </Grid>

</UserControl>